<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.alesk.translation.TranslationFragment">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/rights"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="0dp"
        android:text="Переведено сервисом «Яндекс.Переводчик»"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/resource"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginLeft="320dp"
        android:autoLink="web"
        android:elevation="0dp"
        android:enabled="true"
        android:singleLine="false"
        android:text="@string/yandex_translate"
        android:textColor="@color/href"
        android:visibility="invisible" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="210dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/translated_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:isScrollContainer="false"
                android:textSize="22sp" />
        </LinearLayout>
    </ScrollView>

    <EditText
        android:id="@+id/to_translate"
        android:layout_width="match_parent"
        android:layout_height="154dp"
        android:layout_marginTop="@dimen/toolbar_height"
        android:ems="10"
        android:gravity="top"
        android:inputType="textMultiLine"
        android:textSize="20sp" />

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme">

        <Spinner
            android:id="@+id/lang_from"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:textAlignment="textEnd" />

        <ImageButton
            android:id="@+id/switch_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@android:color/transparent"
            android:src="@mipmap/ic_swap_horizontal" />

        <Spinner
            android:id="@+id/lang_to"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="15dp"
            android:background="@android:color/transparent"
            android:textAlignment="textStart" />

    </android.support.v7.widget.Toolbar>

</FrameLayout>
