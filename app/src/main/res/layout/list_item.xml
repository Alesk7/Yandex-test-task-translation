<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/from_lng"
        android:layout_width="@dimen/lng_width"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:layout_marginTop="9dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="@dimen/lng_size" />

    <TextView
        android:id="@+id/translate_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:layout_marginLeft="@dimen/text_margin_left"
        android:layout_marginRight="@dimen/text_margin_right"
        android:layout_marginTop="6dp"
        android:textColor="@android:color/background_dark"
        android:maxLines="1"
        android:textSize="@dimen/text_size" />

    <TextView
        android:id="@+id/separator"
        android:layout_width="@dimen/lng_width"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_gravity="center_vertical"
        android:textStyle="bold"
        android:text="|"
        android:textSize="3pt" />

    <TextView
        android:id="@+id/to_lng"
        android:layout_width="@dimen/lng_width"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_gravity="bottom"
        android:layout_marginBottom="11dp"
        android:textStyle="bold"
        android:textSize="@dimen/lng_size" />

    <TextView
        android:id="@+id/translated_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginLeft="@dimen/text_margin_left"
        android:layout_marginRight="@dimen/text_margin_right"
        android:layout_marginBottom="8dp"
        android:textColor="@android:color/background_dark"
        android:maxLines="1"
        android:textSize="@dimen/text_size" />

    <com.like.LikeButton
        android:id="@+id/like_button"
        android:layout_width="70dp"
        android:layout_height="68dp"
        android:layout_gravity="right|center_vertical"
        app:icon_size="30dp"
        app:icon_type="star" />

</FrameLayout>